AC_PREREQ([2.68])
AC_INIT([YAJL-build],[2.0.4],[])
AC_CONFIG_AUX_DIR([build-aux])
AC_CONFIG_MACRO_DIR([m4])
AM_INIT_AUTOMAKE([foreign -Wall])
AM_SILENT_RULES([yes])
AM_MAINTAINER_MODE

YAJL_MAJOR=2
YAJL_MINOR=0
YAJL_MICRO=4
LIBYAJL_VERSION="$YAJL_MAJOR":"$YAJL_MICRO":"$YAJL_MINOR"
AC_SUBST([YAJL_MAJOR])
AC_SUBST([YAJL_MINOR])
AC_SUBST([YAJL_MICRO])
AC_SUBST([LIBYAJL_VERSION])

AM_PROG_AR
LT_INIT([disable-shared])
AC_PROG_CC_C99
AC_OUTPUT([Makefile build/Makefile build/yajl/yajl_version.h])
